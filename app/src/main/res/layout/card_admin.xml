<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp"
    card_view:cardBackgroundColor="@color/colorAccent"
    android:layout_margin="13dp">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/caseNameInAdminView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"
            android:text="case Name:"
            android:textColor="#FFF"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/caseNoInAdminView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caseNameInAdminView"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"
            android:text="case No.:"
            android:textColor="#FFF"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/caseTypeInAdminView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caseNoInAdminView"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"
            android:text="case Type:"
            android:textColor="#FFF"
            android:textSize="27sp" />
        <TextView
            android:id="@+id/lastHearingDateInAdminView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/caseTypeInAdminView"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"
            android:text="last date:"
            android:textColor="#FFF"
            android:textSize="27sp" />
        <TextView
            android:id="@+id/nextHearingDateInAdminView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastHearingDateInAdminView"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"
            android:text="next date: waiting..."
            android:textColor="#FFF"
            android:textSize="27sp" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>