<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewlawyerprofile"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_marginTop="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"/>                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/nameu"
                android:layout_width="91dp"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:text="name"
                android:textColor="#fff"
                android:textSize="21dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="EMAIL : "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/emailfd"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="PHONE : "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/phonenumr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="ADDRESS: "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/adrrs"
            android:layout_width="278dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:singleLine="false"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:textColor="#000"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="AGE : "
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/ageu"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/exprview"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="EXPERIENCE : "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/expr"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="YEARS"
            android:textSize="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="CASES HANDLED : "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/casehad"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="SUCCESS RATE: "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/suss"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="95dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="#000"

            android:text="  %"
            android:textSize="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="#000"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="FEES CHARGED : "
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/fees"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            />
        <TextView
            android:id="@+id/feeChrged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000"

            android:layout_gravity="center"
            android:gravity="left"
            android:text="PER SESSION"
            android:textSize="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/tellCaseButton"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="Lodge My Case" />
    <Button
        android:id="@+id/backButton"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="Back" />


</LinearLayout>