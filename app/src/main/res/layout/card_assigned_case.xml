<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="5dp"
    card_view:cardBackgroundColor="@color/colorAccent"
    android:layout_margin="13dp">

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="140dp"
        android:gravity="center">



        <TextView
            android:id="@+id/clientNameas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"
            android:text="client Name:"
            android:textColor="#FFF"
            android:textSize="27sp" />
        <TextView
            android:id="@+id/assignedCaseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/clientNameas"
            android:layout_marginLeft="4dp"

            android:text="case Name:"
            android:textColor="#FFF"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/assignedCaseNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/assignedCaseName"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"

            android:text="case No.:"
            android:textColor="#FFF"
            android:textSize="27sp" />

        <TextView
            android:id="@+id/assignedCaseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/assignedCaseNo"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="4dp"
            android:text="case Type:"
            android:textColor="#FFF"
            android:textSize="27sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>